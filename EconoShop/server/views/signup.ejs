<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/style-session.css">
    <base href="/signup">
    <title>econoshop-signup</title>
</head>
<body>
    <div class="main-titleBox">
        <button class="main-title" onclick="goNewPage('/')">Econo Shop</button>
    </div>
    <h1 class="sub-title">회원가입</h1>
    <!-- link -->
    <div class="private-a-box">
      <a class="a to-login" href="http://localhost:3000/login">로그인</a>
      <a class="a to-mypage" href="http://localhost:3000/mypage">마이페이지</a>
      <a class="a to-cart" href="http://localhost:3000/cart">장바구니</a>
    </div>
    <!-- login form -->
  <div class="sign-up-form">
    <form action="/main" method="post" class="input-form" name="inputForm" novalidate>
      <div class="container">
        <div class="id box">
          <input class='input-id'type="text" placeholder="ID*" name="id" maxlength="20">
          <span class="id-invalid-check">PLEASE ENTER ID</span>
        </div>
        <br>
        <div class="pw-container">
          <div class="pw box">
            <input class='input-pw' type="password" placeholder="PASSWORD*" name="pw" maxlength="20">
            <span class="pw-invalid-check">PLEASE ENTER PW</span>
          </div>
          <div class="pwr box">
            <input class='input-pwrepeat' type="password" placeholder="REPEAT PASSWORD*" name="pwRepeat" maxlength="20">
            <span class="pwr-invalid-check">PLEASE REPEAT PW</span>
          </div>
        </div>
        <br>
        <div class="email box">
          <input class='input-email' type="email" placeholder="EMAIL*" name="email" maxlength="20" >
          <span class="email-invalid-check">PLEASE ENTER EMAIL</span>
        </div>
        <br>
        <div class="semster box">
          <input class='input-semester' type="text" placeholder="SEMESTER*" name="semester" maxlength="2">
          <span class="semester-invalid-check">PLEASE ENTER SEMESTER</span>
        </div>
        <br>
        <div class="clearfix">
          <button type="button" class="cancelbtn">Cancel</button>
          <button type="button" class="signupbtn">SIGN UP</button>
        </div>
      </div>
    </form>
  </div>
<script src="/js/domain/signup.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>
